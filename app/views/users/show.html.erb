<div class="card-container-profile">

  <div class="container-photo-title">
      <%= cl_image_tag @user.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face, class: "user-photo" %>
      <div class="name-city">
        <h2><%= @user.first_name %> <%= @user.last_name %></h2>
        <p><%= @user.city %> - <%= @user.country %></p>

      <p><i class="fa-solid fa-lightbulb"></i> She was part of the batch #<strong><%= @user.batch_number %></strong> in <%= @user.graduation_year %></p>

      </div>
      <div class="cta">
      <% if current_user.chatroom_with(@user) %>
        <%= link_to chatroom_path(current_user.chatroom_with(@user)), class: "btn-red-profile" do %>
          <i class="fa-regular fa-comments"></i> Chat with <%= @user.first_name %>
        <% end %>
      <% else %>
        <%= link_to user_chatrooms_path(@user), class: "btn-red-profile" do %>
          <i class="fa-regular fa-comments"></i> Chat with <%= @user.first_name %>
        <% end %>
      <% end %>

      <% if @user.favorited_by?(current_user) %>
        <p> <i class="fa-solid fa-wand-sparkles"></i><%= @user.first_name %> is your mentor</p>
      <% else %>
        <%= link_to user_favorite_path(@user) do %>
         <i class="fa-solid wand-profile fa-wand-sparkles"></i><%= link_to 'Add as a mentor', user_favorite_path(@user), class: "add-mentor", data: { turbo_method: :post } %>
        <br>
          <% end %>
      <% end %>
     </div>
    </div>

  <div class="card-profile">
    <div class="card-profile-infos">
      <h3><%= @user.first_name %> is a <%= @user.title %></h3>
      <ul class="tags">
        <% @user.competence_list.each do |skill| %>
        <li class="tag-list"><%= skill %></li>
          <% end %>
      </ul>
      <br>
      <h3 class="smaller-h3"><%= @user.first_name  %>'s description:</h3>
      <p><%= @user.description %></p>
    </div>
    </div>
  </div>

<div class="card-profile">
 <%= render "shared/mentors" if @user.mentor == true %>
  </ul>
    <h3 class="smaller-h3">Her projects:</h3>
      <% if @user_projects.exists? %>
        <%= render "projects/show" %>
      <% else %>
        <%= "No projects yet..."  %>
      <% end %>
  </div>
</div>
