
<link
rel="stylesheet"
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css"
/><div class="m-5">
<div class ="form">
  <h1 class="my-9" class="my-5">Find a profile</h1>
  <h4>There are <%= @mentors.count %> marraines <i class="fa-solid fa-wand-sparkles"></i> using the app!</h4>
    <%= form_with url: users_path, method: :get, class: "d-flex" do %>
      <%= select_tag :choices, options_for_select(@competences, ""), multiple: true, data: {controller: "autocomplete"} %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>


  <h4>We've got <%= @users.count %> <%= "profile".pluralize(@users.count) %></h4>
  <div class="user-cards-container">
    <% @users.each do |user| %>
      <% next if user == current_user %>

      <%= link_to user_path(user) do %>
        <div class="user-card mt-4">
          <div class="show-more">
            <i class="fa-regular fa-eye"></i>
          </div>
          <%= cl_image_tag user.photo.key, class: "user-card-image" %>
          <div class="user-card-content">
            <h3><%= user.first_name %> <%= user.last_name%>
            <% if user.mentor == true %>
              <i class="fa-solid fa-wand-sparkles"></i>
            <% end %>
            </h3>
            <p class="fw-bold"><%= user.title %></p>
            <% user.competence_list.first(3).each do |competence| %>
              <span class="badge"><%= competence %></span>
            <% end %>
            <div class="user-button d-flex justify-content-end">

            </div>

          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
