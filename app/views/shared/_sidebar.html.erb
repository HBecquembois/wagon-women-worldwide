<div class="sidebar">
 <%= cl_image_tag current_user.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face, class: "user-side-bar-image" %>
  <h3><%= current_user.first_name  %> <%= current_user.last_name  %></h3>
  <div class="button-center">
    <%= button_to "My dashboard", user_path(current_user), class:"btn-indigo-sidebar align-center"%>

  </div>
  <ul>


    <li><% if controller_name == 'users' && action_name == 'index' %>
      <i class="fa-solid big-arrow fa-arrow-right"></i>
      <% else %>
      <i class="fa-solid fa-arrow-right"></i>
      <% end %>
      <%= link_to "Find a mentor", users_path, class:"#{'active' if controller_name == 'users' && action_name == 'index'}" %>
    </li>

    <li><% if controller_name == 'users' && action_name == '' %>
      <i class="fa-solid big-arrow fa-arrow-right"></i>
      <% else %>
      <i class="fa-solid fa-arrow-right"></i>
      <% end %>
      <%= link_to "My messages", users_path, class:"#{'active' if controller_name == '' && action_name == ''}" %>
    </li>

    <li><% if controller_name == 'users' && action_name == '' %>
      <i class="fa-solid big-arrow fa-arrow-right"></i>
      <% else %>
      <i class="fa-solid fa-arrow-right"></i>
      <% end %>
      <%= link_to "My mentors", users_path, class:"#{'active' if controller_name == '' && action_name == ''}" %>
    </li>

    <div class="my-mentors">
    <% @favorited.each do |f| %>
      <li><i class="fa-solid sidebar-wand fa-wand-sparkles"></i>  <%= cl_image_tag f.photo.key, width: 25, height: 25, crop: :thumb, gravity: :face, class: "rounded" %> <%= link_to f.first_name, user_path(f) %>
        <%= link_to "Profile", user_path(f), class: "btn-red-sidebar" %>
        <%= link_to "Chat", user_path(f), class: "btn-red-sidebar" %>
        <%= link_to 'x', user_unfavorite_path(f), class: "btn-red-sidebar", data: { turbo_method: :patch } %>
          <% end %>
          </li>
  </ul>

</div>
